{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "leader": "ctrl+o",
  },
  "permission": {
    "bash": {
      "git log *": "allow",
      "git show *": "allow",
      "ls *": "allow",
      "sg *": "allow",
      "rg *": "allow",
    },
  },
  "plugin": [
    "@franlol/opencode-md-table-formatter@0.0.3",
    "oh-my-opencode@3.1.0",
  ],
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
    },
  },
}
